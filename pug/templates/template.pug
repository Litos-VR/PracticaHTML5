block config
    include ../config/config.pug

doctype html
html
    head
        title #{pageTitle} | #{siteTitle}
        meta(charset="utf-8")
        meta(name='description' content=description)
        meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
        link(href="https://file.myfontastic.com/wXUejw7cV5KRrdtkS8GFFi/icons.css" rel="stylesheet")
        link(rel='stylesheet' href='/css/styles-dist.css')
    body(class=currentPage)
        header.main-header
            .logo-container
              a(href="/")
                  img(src='/img/logo.png').logo

            nav.menu
                include ../blocks/menu.pug

        div.main-banner
            block banner
                img(src='/img/' + currentPage + '.png')

        .main-content
          main
              block main

          aside.main-sidebar
              block aside
                  if siguenos == true
                      include ../blocks/siguenos.pug

        footer.main-footer
            p Creativos SMD - Todos los derechos reservados
            block footer
